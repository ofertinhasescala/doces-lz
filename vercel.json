{
  "version": 2,
  "name": "delivery-gourmet",
  "builds": [
    { "src": "**/*.html", "use": "@vercel/static" },
    { "src": "**/*.htm", "use": "@vercel/static" },
    { "src": "**/*.css", "use": "@vercel/static" },
    { "src": "**/*.js", "use": "@vercel/static" },
    { "src": "**/*.{jpg,jpeg,png,gif,svg,ico}", "use": "@vercel/static" },
    { "src": "**/*.{ttf,woff,woff2,eot}", "use": "@vercel/static" }
  ],
  "rewrites": [
    { "source": "/", "destination": "/index.htm" },
    { "source": "/loja/:path*/finalizar", "destination": "/index.htm" },
    { "source": "/delivery/:path*", "destination": "/index.htm" },
    { "source": "/(.*)", "destination": "/$1" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=0, must-revalidate" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" },
        { "key": "Access-Control-Allow-Origin", "value": "*" }
      ]
    }
  ]
} 